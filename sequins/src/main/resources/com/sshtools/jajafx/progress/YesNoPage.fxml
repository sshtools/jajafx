<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sshtools.jajafx.progress.YesNoPage">
   <children>
      <VBox styleClass="spaced" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="title" styleClass="h2" text="%title" />
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
               <content>
                  <Label fx:id="text" styleClass="text-accent" text="Text" wrapText="true" />
               </content>
            </ScrollPane>
            <BorderPane>
               <left>
                  <HBox styleClass="spaced" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="yes" defaultButton="true" mnemonicParsing="false" text="%yes" />
                        <Button fx:id="no" cancelButton="true" mnemonicParsing="false" text="%no" />
                     </children>
                  </HBox>
               </left>
               <right>
                  <HBox fx:id="accessories" styleClass="spaced" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
